#!/bin/sh
bold="$(tput bold)"
normal="$(tput sgr0)"
envname="$1"
if [ -z "$envname" ]; then
    read -p "üí¨  ${bold}Name of conda environment to create: ${normal}" envname
fi
if [ -z "$envname" ]; then
    echo "‚ùå  ${bold}Environment name required, aborting.${normal}"
    exit 1
fi
read -n 1 -p "üìä  ${bold}Do you want to install JupyterLab/HoloViews/Bokeh/Matplotlib to environment ${envname} now? ${normal}[y/N] " answer
echo
case ${answer:0:1} in
    y|Y )
        # SEE: https://stackoverflow.com/questions/1167746/how-to-assign-a-heredoc-value-to-a-variable-in-bash
        # SEE: https://stackoverflow.com/questions/2953081/how-can-i-write-a-heredoc-to-a-file-in-bash-script
        packages=$(cat << EOF
name: ${envname}
channels:
  - pyviz
  - conda-forge
  - defaults
dependencies:
  - black
  - bokeh
  - cachetools
  - click
  - holoviews
  - hvplot
  - ipywidgets
  - jupyterlab
  - jupyterlab_code_formatter
  - matplotlib
  - nbformat
  - numpy
  - nodejs
  - pandas
  - pip
  - pip:
      - docformatter
  - pre-commit
EOF
        )
    ;;
    * )
        echo "${bold}If you need these in the future, you can always run${normal}"
        echo
        echo "    conda install -y -c pyviz jupyterlab holoviews hvplot bokeh matplotlib nodejs numpy pandas"
        echo "    export-env"
        echo "    prepare-env"
        echo
        packages=$(cat << EOF
name: ${envname}
channels:
  - conda-forge
  - defaults
dependencies:
  - black
  - cachetools
  - click
  - nbformat
  - pip
  - pip:
      - docformatter
  - pre-commit
EOF
        )
    ;;
esac
echo "‚úèÔ∏è   ${bold}Writing README.md${normal}"
cat << "EOF" > README.md
# Title

Summary.

## Installation

You will need to configure the Bop It Extreme by running the following:
```
important_command --with-arguments
```

## Contributors

- Your Name

## References

- Landgraf, D., Okumus, B., Chien, P., Baker, T. A., & Paulsson, J. (2012). Segregation of molecules at cell division reveals native protein localization. *Nature Methods*, 9(5), 480.
EOF
echo "‚úèÔ∏è   ${bold}Writing packages to environment.yml${normal}"
echo "$packages" > environment.yml
echo "‚úèÔ∏è   ${bold}Writing environment name '${envname}' to .envname${normal}"
echo "$envname" > .envname
make-envrc
