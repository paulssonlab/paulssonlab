#!/bin/sh
bold="$(tput bold)"
normal="$(tput sgr0)"
envyml="${1:-environment.yml}"
if [ ! -f "$envyml" ]; then
    echo "‚ùå  ${bold}Environment file ${envyml} not found, aborting.${normal}"
    exit 1
fi
check-long-running-process || exit $?
$(mamba_cmd) env update --prune -f "$envyml"
prepare-env "$envyml"
